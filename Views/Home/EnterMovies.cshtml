@model Baby.Models.Movie

<form asp-action="EnterMovies" method="post">
    
    <div>
        <label asp-for="Category">Category: </label>
        <input class="form-control" asp-for="Category" />
    </div>

    <div>
        <label asp-for="Title">Title: </label>
        <input class="form-control" asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year: </label>
        <input class="form-control" asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director: </label>
        <input class="form-control" asp-for="Director" />
    </div>

    <div>
        <label asp-for="Rating" for="Rating">Rating: </label>
        <select class="form-control" id="Rating" name="Rating" asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <br />
    <div>
        <label asp-for="Edited" for="Edited">Edited: </label>
        <select class="form-control" id="Edited" name="Edited" asp-for="Edited">
            <option value="False" selected>False</option>
            <option value="True">True</option>
        </select>
    </div>

    <div>
        <label asp-for="Lent">Lent To: </label>
        <input class="form-control" asp-for="Lent" />
    </div>

    <div>
        <label asp-for="Notes">Notes: </label>
        <input class="form-control" asp-for="Notes" maxlength="25" />
    </div>

    <br />
    <button type="submit">Submit</button>
    <div asp-validation-summary="All"></div>

</form>